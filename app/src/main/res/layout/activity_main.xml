<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tex_M"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:text="章栋杰的计算机"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="1024×2"
        android:gravity="right"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/view_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:text="2048"
        android:gravity="right"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="6"
        android:columnCount="4"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/button_fac"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="fac"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_sin"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="sin"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_cos"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="cos"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_tan"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="tan"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_clear"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="C"
            android:textColor="#0A59F7"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_div"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="÷"
            android:textColor="#0A59F7"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_mul"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="×"
            android:textColor="#0A59F7"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_del"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="⋘"
            android:textColor="#0A59F7"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_7"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="7"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_8"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="8"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_9"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="9"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_sub"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="━"
            android:textColor="#0A59F7"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_4"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="4"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_5"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="5"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_6"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="6"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_add"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="+"
            android:textColor="#0A59F7"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_1"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="1"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_2"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="2"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="3"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_equal"
            android:layout_width="85dp"
            android:layout_height="160dp"
            android:layout_rowSpan="2"
            android:text="="
            android:textSize="30sp"
            android:textColor="#FCFCFC"
            android:layout_margin="5dp"
            android:background="@drawable/button_e"/>

        <Button
            android:id="@+id/button_PI"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="PI"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_e"/>

        <Button
            android:id="@+id/button_0"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="0"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

        <Button
            android:id="@+id/button_point"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:text="."
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_r"/>

    </GridLayout>

</LinearLayout>
